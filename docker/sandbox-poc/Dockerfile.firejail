# Dockerfile for Firejail POC
FROM airbyte/source-declarative-manifest:latest

USER root

# Install firejail
RUN apt-get update && \
    apt-get install -y firejail && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Copy the wrapper script
COPY scripts/firejail-wrapper.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/firejail-wrapper.sh

# Set the new entry point
ENTRYPOINT ["/usr/local/bin/firejail-wrapper.sh"]
USER airbyte
